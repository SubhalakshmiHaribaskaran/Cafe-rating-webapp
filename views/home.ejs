<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
</head>
<body>
  <h1>My Cafe Home</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Phone</th>
        <th>Avg Rating</th>
        <th>Total Rating</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% for( let index = 0; index < data.length; index++ ) { %>
        <tr>
          <td><%= index+1 %></td>
          <td><%= data[index].name %></td>
          <td><%= data[index].phone %></td>
          <td>
            <% if(data[index].reviewCount==0){ %>
              Not yet Rated
              <% } else { %>
                <%= data[index].reviewSum/data[index].reviewCount %>
              <% } %>
          </td>
          <td><%= data[index].reviewCount %></td>
          <td><a href="#">Rate Now</a></td>
        </tr>
      <% } %>
    </tbody>
  </table>
  <a href="/add">Add A New Cafe</a>
</body>
</html>